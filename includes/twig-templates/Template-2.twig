{% for d in data.data %}
    <div class=" {{ d.bgClass }}">
        <div class="report-container report-template2 animate__animated animate__fadeIn">
            <div class="d-flex mx-auto flex-wrap template-wrapper border-bottom bg-light p-3">
                {% for section in d.post.post_sections %}
                    {% set counter = ( counter | default(0) ) + 1 %}
                    {% if counter < 4 %}
                        {% if counter == 1 %}
                            <div class="col-xl-4 col-6 p-3">
                                <div class="content-one-headline fst-normal">
                                    {% autoescape false %}
                                        {{ section.headline }}
                                    {% endautoescape %}
                                </div>
                                <div class="content-one-content fst-normal">
                                    {% autoescape false %}
                                        {{ section.content }}
                                    {% endautoescape %}
                                </div>
                            </div>
                        {% else %}
                            {% if counter == 2 %}
                            <div class="col-xl-3 col-6 p-3">
                            {% else %}
                                <div class="col-xl-2 col-6 p-3">
                             {% endif %}
                                <div class="headline fst-normal">
                                    {% autoescape false %}
                                        {{ section.headline }}
                                    {% endautoescape %}
                                </div>
                                <div class="content fst-normal">
                                    {% if section.is_date %}
                                        {% if d.post.date_from_format %}
                                            {{ d.post.date_from_format }}
                                            {% if d.post.date_to_format %}
                                                {{ d.post.date_to_language }} {{ d.post.date_to_format }}
                                            {% endif %}
                                        {% endif %}
                                    {% else %}
                                        {% autoescape false %}
                                            {{ section.content }}
                                        {% endautoescape %}
                                    {% endif %}
                                </div>
                            </div>
                        {% endif %}
                    {% endif %}
                {% endfor %}
                <div class="col-xl-2 col-6 p-3 flex-fill text-xl-end text-start">
                    <a {% if d.attr.buttonTargetAktiv %}
                        target="_blank"
                    {% endif %}
                            class="{{ d.attr.buttonCss }}"
                            href="{{ d.post.permalink }}">
                        {% autoescape false %}
                            {{ d.attr.buttonIcon }}
                        {% endautoescape %}
                        {{ d.attr.buttonLabel }}
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endfor %}

